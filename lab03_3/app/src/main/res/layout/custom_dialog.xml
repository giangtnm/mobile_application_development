<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/rl_parent"
    android:padding="@dimen/margin_base_x3">

    <TextView
        android:id="@+id/tv_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/username"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:paddingBottom="@dimen/margin_base_x3"/>

    <EditText
        android:id="@+id/et_username"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/tv_username"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:id="@+id/tv_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/password"
        android:layout_below="@id/tv_username"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:paddingTop="@dimen/margin_base_x3"/>

    <EditText
        android:id="@+id/et_password"
        android:inputType="textPassword"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/tv_password"
        android:layout_below="@id/et_username"
        android:layout_alignParentEnd="true"/>

    <Button
        android:id="@+id/btn_sign_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/et_password"
        android:layout_below="@+id/et_password"
        android:text="@string/sign_in" />

    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btn_sign_in"
        android:layout_alignBottom="@+id/btn_sign_in"
        android:layout_marginStart="34dp"
        android:layout_toEndOf="@+id/btn_sign_in"
        android:text="@string/cancel" />

</RelativeLayout>
